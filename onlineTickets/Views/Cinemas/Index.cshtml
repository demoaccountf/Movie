@model IEnumerable<Cinema>

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Cinemas";
}

@*Write code*@
<h1>Welcome to Actors view -Index</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <td>
                    <th>@Html.DisplayNameFor(model => model.Logo) </th>
                    <th>@Html.DisplayNameFor(model => model.Name) </th>
                    <th>@Html.DisplayNameFor(model => model.Description) </th>
                    <th>Actions</th>


                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px" />

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)

                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square">Edit</i></a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.id"> <i class="bi bi-pencil-square">Details</i></a>
                            <a class="btn btn-danger text-white"> <i class="bi bi-trash">Delete</i></a>

                        </td>
                    </tr>
                }
            </tbody>
          
        </table>
    </div>
</div>


<div style="position: fixed;right:25px;" class="text-white">
    <a  asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New </a>
</div>

